@model IEnumerable<Movie>
@{
    ViewData["Title"] = "Movies";
}

<h2 class="text-info"> <i class="bi bi-film"></i> Movies List</h2>
<a class="btn btn-primary" asp-action="Create"><i class="bi bi-plus-square-fill"></i> Add movie</a>

<div class="mt-4">
    @if (!Model.Any())
    {
        <div class="alert alert-info">
            <i class="bi bi-exclamation-triangle-fill"> No Movies found ! </i>
        </div>
    }
    else
    {
        
    }
</div>

